<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Guid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.guid %></td>
        <td><%= link_to 'Show', team_path(team.guid) %></td>
        <td><%= link_to 'Edit', edit_team_path(team.guid) %></td>
        <td><%= link_to 'Destroy', team_path(team.guid), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

