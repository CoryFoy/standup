<script type="text/javascript">
$(document).ready(function() {
  $(".piece-sayer").click(function() {
    id = $(this).attr('id').split('-')[1];
    $.post('/meetings/<%=@meeting.guid %>/members/' + id + '/update_to_finished', function(data) {
        $('#participant-status').html(data);
      });
  });
});
</script>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @meeting.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @meeting.date %>
</p>

<p>
  <strong>Guid:</strong>
  <%= @meeting.guid %>
</p>

<p>
  <strong>Team:</strong>
  <%= @meeting.team_id %>
</p>

<%= link_to 'Edit', edit_meeting_path(@meeting) %> |
<%= link_to 'Back', meetings_path %>

<hr />

<div id="participant-status">
  <%=render :partial => "status" %>
</div>
